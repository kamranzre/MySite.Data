<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebCRUD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/Script/Base.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/themes/default/js/plugins/loaders/pace.min.js"></script>
    <script type="text/javascript" src="~/themes/default/js/plugins/bootstrap-toastr/toastr.min.js"></script>
    <script type="text/javascript" src="~/themes/default/js/core/libraries/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/themes/default/js/plugins/loaders/blockui.min.js"></script>
    <script type="text/javascript" src="~/themes/default/js/core/libraries/jquery.min.js"></script>
    <link href="~/themes/default/js/plugins/bootstrap-toastr/toastr-rtl.min.css" rel="stylesheet" />
    <script src="~/themes/default/js/plugins/bootstrap-toastr/toastr.min.js"></script>
    <link href="~/themes/default/css/icons/fontawesome/css/all.min.css" rel="stylesheet" />
    <script src="~/themes/default/css/icons/fontawesome/js/all.min.js"></script>
    <script src="~/themes/default/css/icons/fontawesome/js/fontawesome.min.js"></script>
    <script src="~/themes/default/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/themes/default/js/custom.min.js"></script>
    <script src="~/themes/default/js/custom.js"></script>
    <script src="~/themes/default/js/pages/BaseJs.js"></script>
    <link href="~/themes/default/sweetalert/dist/sweetalert.min.css" rel="stylesheet" asp-append-version="true" />

    <partial name="_KendoJsCss" />
    @RenderSection("scripts", required: false)

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebCRUD</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Person" asp-action="Index">Person</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - WebCRUD - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
